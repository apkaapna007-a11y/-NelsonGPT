# Nelson-GPT Environment Variables

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Mistral AI Configuration
VITE_MISTRAL_API_KEY=your_mistral_api_key
VITE_MISTRAL_MODEL=mistral-large-latest

# Hugging Face Configuration (for embeddings)
VITE_HF_API_KEY=your_hugging_face_api_key
VITE_HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Application Configuration
VITE_APP_NAME=Nelson-GPT
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Pediatric Knowledge Assistant"

# Development Configuration
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_CACHE_NAME=nelson-gpt-cache

# Analytics (optional)
VITE_ANALYTICS_ID=your_analytics_id

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_EXPORT_CHAT=true

# API Endpoints
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_FEEDBACK_ENDPOINT=/api/feedback

# Rate Limiting
VITE_MAX_REQUESTS_PER_MINUTE=30
VITE_MAX_MESSAGE_LENGTH=2000

# Citation Configuration
VITE_MAX_CITATIONS_PER_RESPONSE=10
VITE_CITATION_CONFIDENCE_THRESHOLD=0.7

# Vector Search Configuration
VITE_VECTOR_SEARCH_LIMIT=10
VITE_SIMILARITY_THRESHOLD=0.7

# MongoDB Atlas Configuration (Alternative to Supabase)
VITE_MONGODB_DATA_API_URL=https://data.mongodb-api.com/app/your-app-id/endpoint/data/v1
VITE_MONGODB_API_KEY=your_mongodb_atlas_api_key
VITE_MONGODB_CLUSTER=peadknowledgebase
VITE_MONGODB_DATABASE=supabase_migration

# Backend Python Environment (for setup scripts)
MONGODB_URI=mongodb+srv://username:password@peadknowledgebase.mongodb.net/
